<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <padding
                android:left="@dimen/_4sdp"
                android:top="@dimen/_4sdp"
                android:right="@dimen/_4sdp"
                android:bottom="@dimen/_4sdp"
                />

            <gradient android:startColor="#00c4c7a9" android:endColor="#00d6dadf" android:angle="270" />

            <stroke android:width="@dimen/_2sdp" android:color="@color/black" />
            <corners android:radius="@dimen/_4sdp" />
        </shape>
    </item>

    <item android:state_focused="false">
        <shape android:shape="rectangle">
            <padding
                android:left="@dimen/_4sdp"
                android:top="@dimen/_4sdp"
                android:right="@dimen/_4sdp"
                android:bottom="@dimen/_4sdp"
                />

            <gradient android:startColor="#00c4c7a9" android:endColor="#00d6dadf" android:angle="270" />
            <stroke  android:width="@dimen/_2sdp" android:color="@color/black" />
            <corners android:radius="@dimen/_4sdp" />

        </shape>
    </item>


</selector>